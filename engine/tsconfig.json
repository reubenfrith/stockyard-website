{
	"compilerOptions": {
		"preserveConstEnums": true,
		"strictNullChecks": true,
		"sourceMap": true,
		"allowJs": true,
		"target": "es5",
		"outDir": "./build",
		"moduleResolution": "node",
		"lib": [
			"es2017",
			"dom"
		],
		"esModuleInterop": true,
		"rootDir": "./",
		"resolveJsonModule": true,
	},
	"include": [
		"typings/**/*",
		"src/**/*",
		"src/*",
		"static/*",
  ],
  "exclude": [
    "node_modules"
	],
}

